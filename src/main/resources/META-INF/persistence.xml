<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="ledgerPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <!-- Entity classes -->
        <class>com.ledger.domain.User</class>

        <class>com.ledger.domain.Account</class>
        <class>com.ledger.domain.BasicAccount</class>
        <class>com.ledger.domain.CreditAccount</class>
        <class>com.ledger.domain.LoanAccount</class>
        <class>com.ledger.domain.AccountCategory</class>
        <class>com.ledger.domain.AccountType</class>

        <class>com.ledger.domain.InstallmentPlan</class>

        <class>com.ledger.domain.Currency</class>

        <class>com.ledger.domain.Ledger</class>

        <class>com.ledger.domain.Transaction</class>
        <class>com.ledger.domain.TransactionType</class>
        <class>com.ledger.domain.Transfer</class>
        <class>com.ledger.domain.Expense</class>
        <class>com.ledger.domain.Income</class>

        <class>com.ledger.domain.Budget</class>

        <class>com.ledger.domain.CategoryComponent</class>
        <class>com.ledger.domain.Category</class>
        <class>com.ledger.domain.SubCategory</class>

        <class>com.ledger.domain.BorrowingAndLending</class>
        <class>com.ledger.domain.Borrowing</class>
        <class>com.ledger.domain.Lending</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:mem:test;DB_CLOSE_DELAY=-1"/>
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>

        </properties>
    </persistence-unit>
</persistence>


